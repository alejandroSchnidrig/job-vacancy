<h1>Current Job Offers</h1>
<table class="table table-bordered">
	<tr>
		<th>Title</th>
		<th>Location</th>
		<th>Latitude</th>
		<th>Longitude</th>
		<th>Description</th>
		<th>Created on</th>
		<th>Actions</th>
	</tr>
	<% @offers.each do | offer| %>

	<tr>
		<td>
			<%= offer.title %>
		</td>
		<td>
			<%= offer.location %>
		</td>
		<td>
			<%= offer.latitude %>
		</td>
		<td>
			<%= offer.longitude %>
		</td>
		<td>
			<%= offer.description %>
		</td>		
		<td>
			<%= offer.created_on %>
		</td>	
		<td>
			<%= link_to 'Apply', url_for(:job_offers, :apply, :offer_id => offer.id), :class => "btn btn-primary" %>
		</td>		
	</tr>

  <% end %>

</table>