<h1>Login</h1>
<% form_for(@user, '/sessions/create') do |f| %>
  <%= f.label :email %>
  <%= f.text_field :email %>
  <%= f.label :password %>
  <%= f.password_field :password %>
  <br/>
  <%= f.submit "Login", :id => 'loginButton', :class => "btn btn-primary" %>
  <%= link_to 'Sign Up', url_for(:users, :new) %>
  <br/>
  <br/>
  <%= link_to 'I forgot my password', url_for(:users, :password_recovery) %>
<% end %> 